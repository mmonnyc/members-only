<div class="column is-half">

<% @posts.each do |post| %>
  <div class="box">
    <article class="media">
      <div class="media-left">
        <figure class="image is-64x64">
          <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <strong><%= post.title %></strong>
          <% if user_signed_in? %><p><%= post.user.name %></p><% end %>
          <p><%= post.post %></p>
        </div>
        <% if post.user == current_user %>
        <nav class="level">
          <div class="level-left is-mobile">
            <%= link_to post, class: "level-item" do %>
              <span class="icon has-text-primary"><i class="fa fa-link" aria-hidden="true"></i></span>
            <% end %>
            <%= link_to edit_post_path(post), class: "level-item" do %>
              <span class="icon has-text-primary"><i class="fa fa-pencil" aria-hidden="true"></i></span>
            <% end %>
            <%= link_to post, method: :delete, data: { confirm: "Are you sure you want to delete this post?" 
              } do %>
              <span class="icon has-text-primary"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
            <% end %>  
          </div>
        </nav>
        <% end %>
      </div>
    </article>
  </div>
<% end %>
</div>